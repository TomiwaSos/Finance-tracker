<% if !@friendships.empty? %>
  <table class="table col-10">
    <thead class="thead-dark table-hover">
      <tr>
        <th scope="col">Email</th>
        <th scope="col">Full Name</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @friendships.each do |friend|%>
        <tr>
          <td scope="row"><%= friend.email%></td>
          <td><%= friend.full_name%></td>
          <td><%= link_to "View Profile", user_path(friend), class: "btn btn-xs btn-success"%>
            <%= link_to "Stop Following", friendship_path(friend), method: :delete, data:{confirm: "Are you sure ?"}, class: "btn btn-xs btn-warning"%></td>
        </tr>
      <%end%>
    </tbody>
  </table>
<% end %>
